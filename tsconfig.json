{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/*.ts",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}